<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDragonBallZ.View.Characters"
             NavigationPage.HasNavigationBar="False"
             Title="Characters">
  
       
    <!--imagenes-->
    <ScrollView BackgroundColor="White">
          
        <StackLayout >
            <!--logo-->
            <StackLayout Margin="5,5">
                <Image Source="dragonballsuper.png"/>
                <Border Margin="10">
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Opacity="0.9"
                                Offset="5,5"
                                Radius="10" />
                    </Border.Shadow>
                </Border>
                
            </StackLayout>
            
            <!--etiquetas-->
            <ScrollView Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout HorizontalOptions="Center"
                                       Spacing="5"
                                       Margin="10,10">
                    <Button Text="{Binding Pagination.Meta.TotalItems, StringFormat='Total personajes: {0}'}"
                            FontAttributes="Bold"
                            BackgroundColor="#ba0f42"
                            CornerRadius="20"
                            HeightRequest="35"
                            Padding="15,0,15,0" />
                    <Button Text="{Binding Pagination.Meta.TotalPages, StringFormat='Total p치gina: {0}'}"
                            FontAttributes="Bold"
                            BackgroundColor="#30915f"
                            CornerRadius="20"
                            HeightRequest="35"
                            Padding="15,0,15,0" />
                    <Button Text="{Binding Pagination.Meta.CurrentPage, StringFormat='P치gina actual: {0}'}"
                            FontAttributes="Bold"
                            BackgroundColor="#2c74ab"
                            CornerRadius="20"
                            HeightRequest="35"
                            Padding="15,0,15,0" />
                    <Button Text="{Binding Pagination.Meta.ItemsPerPage, StringFormat='Cantidad personajes por p치gina: {0}'}"
                            FontAttributes="Bold"
                            BackgroundColor="#2c74ab"
                            CornerRadius="20"
                            HeightRequest="35"
                            Padding="15,0,15,0" />
                </HorizontalStackLayout>
            </ScrollView>
            
            <!--Personajes-->               
            <CollectionView ItemsSource="{Binding Pagination.Characters}"
                            x:Name="characters">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                        Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="20,0,20,0"
                                RowDefinitions="*,*"
                                Margin="0,10">
                            <Grid Grid.Row="0">
                                <Border HeightRequest="280"
                                        Stroke="#87878a"
                                        StrokeShape="RoundRectangle 20,20,20,20"
                                        StrokeThickness="0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0"
                                                                EndPoint="1,1">
                                            <GradientStop Color="#5da1a3"
                                                            Offset="0.0" />
                                            <GradientStop Color="#ffffff"
                                                            Offset="0.5" />
                                            <GradientStop Color="#ffffff"
                                                            Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Shadow>
                                        <Shadow Brush="Black"
                                                Opacity="0.5"
                                                Offset="5,5"
                                                Radius="10" />
                                    </Border.Shadow>
                                </Border>
                                <Image Aspect="AspectFit"
                                       HeightRequest="300"
                                       Source="{Binding Image}" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.SeleccionarPersonajeCommand, Source={x:Reference characters}}"
                                                          CommandParameter="{Binding Id}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                            
                            <!--Nombre personaje-->
                            <Grid Grid.Row="1"
                                    Margin="0,0,0,0">
                                <Label HorizontalOptions="Center"
                                        TextColor="Black"
                                        Text="{Binding Name}"
                                        FontAttributes="Bold"
                                        FontSize="15"
                                        VerticalOptions="End" />
                                <BoxView HeightRequest="1"
                                            BackgroundColor="#d1d1d1"
                                            Margin="0,25,0,0" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
                                               
            <!--boton paginaci칩n-->
            <HorizontalStackLayout HorizontalOptions="Center"
                                    Margin="0,10"
                                    BindableLayout.ItemsSource="{Binding Pagination}"
                                    x:Name="pagintionCharacters">
                <Button Text="Anterior"
                        IsEnabled="{Binding BtnAnterior}"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#262626"
                        CornerRadius="20"
                        HeightRequest="35"
                        Margin="0,0,5,0"
                        Padding="15,0,15,0">
                    <Button.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=BindingContext.AnteriorPaginaCommand, Source={x:Reference pagintionCharacters}}"
                                                CommandParameter="{Binding Pagination}" />
                    </Button.GestureRecognizers>
                </Button>
                    
                <Button Text="Siguiente"   
                        IsEnabled="{Binding BtnSiguiente}"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#262626"
                        CornerRadius="20"
                        HeightRequest="35"
                        Margin="5,0,0,0"
                        Padding="15,0,15,0">
                    <Button.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=BindingContext.SiguientePaginaCommand, Source={x:Reference pagintionCharacters}}"
                                                CommandParameter="{Binding Pagination}" />
                    </Button.GestureRecognizers>
                </Button>
            </HorizontalStackLayout>
               
        </StackLayout>
    </ScrollView>
       
        
       

</ContentPage>